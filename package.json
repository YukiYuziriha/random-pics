{
  "type": "module",
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "scripts": {
    "build": "bun build ./src/main.tsx --outdir ./dist --minify",
    "build:tauri": "rm -rf ./dist-tauri && mkdir -p ./dist-tauri && bun build ./src/main.tsx --outdir ./dist-tauri/dist --minify && cp ./index.html ./dist-tauri/index.html",
    "build:watch": "bun build ./src/main.tsx --outdir ./dist --minify --watch",
    "build:watch:tauri": "rm -rf ./dist-tauri && mkdir -p ./dist-tauri && cp ./index.html ./dist-tauri/index.html && bun build ./src/main.tsx --outdir ./dist-tauri/dist --minify --watch",
    "dev": "bun run build:watch",
    "test": "bun tests/run.ts",
    "test:list": "bun tests/run.ts --list",
    "test:domain": "bun tests/run-domain.ts",
    "test:api": "bun tests/run-api.ts",
    "test:ci": "bun tests/run-ci.ts",
    "test:bun": "node scripts/run-backend-tests.mjs bun",
    "test:rust-bridge": "node scripts/run-backend-tests.mjs rust-bridge",
    "test:parity": "node scripts/run-parity-tests.mjs"
  }
}
